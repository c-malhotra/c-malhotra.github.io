{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Unemployment Rate (Ages 16+)",
    "fontSize": 14,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": 500,
  "height": 350,
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/unem?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#9b7bb5",
    "strokeWidth": 2,
    "point": {
      "filled": true,
      "fill": "#ded0f2",
      "size": 30
    }
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Date",
        "grid": false,
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "Unemployment Rate (%)",
        "grid": true,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      { "field": "date", "type": "temporal", "title": "Date", "format": "%B %Y" },
      { "field": "value", "type": "quantitative", "format": ".2f", "title": "Unemployment (%)" }
    ]
  }
}
