{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Disability Prevalence in Selected Developing Countries",
    "fontSize": 14,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": 500,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/c-malhotra/c-malhotra.github.io/refs/heads/main/CC1_globaldisability.csv",
    "format": {
      "type": "csv",
      "parse": {
        "value": "number"
      }
    }
  },
  "mark": {
    "type": "bar",
    "color": "#ded0f2",
    "cornerRadiusTopLeft": 4,
    "cornerRadiusTopRight": 4
  },
  "encoding": {
    "x": {
      "field": "country",
      "type": "nominal",
      "sort": "-y",
      "axis": {
        "labelAngle": -45,
        "labelFontSize": 11,
        "title": "Country"
      },
      "scale": {
        "paddingInner": 0.4,
        "paddingOuter": 0.2
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "Disability Prevalence (%)",
        "grid": true,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      { "field": "country", "type": "nominal", "title": "Country" },
      { "field": "value", "type": "quantitative", "format": ".2f", "title": "Prevalence (%)" },
      { "field": "year", "type": "nominal", "title": "Latest year" }
    ]
  }
}