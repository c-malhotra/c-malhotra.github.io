{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Disability Prevalence in Selected Developing Countries",
    "fontSize": 14,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#010911"
  },
  "width": "container",
  "height": 400,
  "padding": {"top": 30, "bottom": 50, "left": 60, "right": 20},
  "data": {
    "url": "https://raw.githubusercontent.com/c-malhotra/c-malhotra.github.io/refs/heads/main/CC1_globaldisability.csv"
  },
  "mark": {
    "type": "bar",
    "tooltip": true,
    "color": "#ded0f2",
    "cornerRadiusTopLeft": 4,
    "cornerRadiusTopRight": 4
  },
  "encoding": {
    "x": {
      "field": "country",
      "type": "nominal",
      "sort": "-y",
      "axis": {
        "labelAngle": -45,
        "labelFontSize": 12,
        "titleFontSize": 14
      },
      "title": "Country"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "labelFontSize": 12,
        "titleFontSize": 14,
        "grid": true,
        "gridColor": "#e0e0e0",
        "gridWidth": 1
      },
      "title": "Disability prevalence (%)"
    },
    "tooltip": [
      {"field": "country", "type": "nominal"},
      {"field": "value", "type": "quantitative", "format": ".2f"},
      {"field": "year", "type": "nominal", "title": "Latest year"}
    ]
  },
  "config": {
    "background": "#f9f9f9"
  }
}