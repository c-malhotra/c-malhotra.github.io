{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Employment to Population Ratio (15–29) for Persons with Disabilities — 2022",
    "fontSize": 14,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/c-malhotra/c-malhotra.github.io/refs/heads/main/CC1.2/pwd_employment.csv",
    "format": {"type": "csv", "parse": {"Data": "number", "Time": "number"}}
  },
  "transform": [
    {"filter": "datum.Time == 2022"},
    {"filter": "isValid(datum.Data)"}
  ],
  "mark": {
    "type": "bar",
    "color": "#ded0f2",
    "cornerRadiusTopLeft": 4,
    "cornerRadiusTopRight": 4
  },
  "encoding": {
    "x": {
      "field": "Country_Name",
      "type": "nominal",
      "axis": {"labelAngle": -30, "labelFontSize": 11},
      "title": "Country",
      "scale": {"paddingInner": 0.4, "paddingOuter": 0.2}
    },
    "y": {
      "field": "Data",
      "type": "quantitative",
      "axis": {"title": "Employment (%)", "grid": true}
    },
    "tooltip": [
      {"field": "Country_Name", "type": "nominal", "title": "Country"},
      {
        "field": "Data",
        "type": "quantitative",
        "format": ".1f",
        "title": "Employment (%)"
      },
      {"field": "Time", "type": "quantitative", "title": "Year"}
    ]
  },
  "config": {}
}